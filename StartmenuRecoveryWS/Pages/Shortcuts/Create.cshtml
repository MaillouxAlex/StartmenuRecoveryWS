@page
@model StartmenuRecoveryWS.Pages.Shortcuts.CreateModel

<h4>Shortcut</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shortcut.LnkName" class="control-label"></label>
                <input asp-for="Shortcut.LnkName" class="form-control" />
                <span asp-validation-for="Shortcut.LnkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shortcut.LnkPath" class="control-label"></label>
                <input asp-for="Shortcut.LnkPath" class="form-control" />
                <span asp-validation-for="Shortcut.LnkPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shortcut.AppPath" class="control-label"></label>
                <input asp-for="Shortcut.AppPath" class="form-control" />
                <span asp-validation-for="Shortcut.AppPath" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shortcut.Approved" /> @Html.DisplayNameFor(model => model.Shortcut.Approved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
